 <div class="panel panel-black" style="margin-top: -3%; background-color: #1c2a48;">
    <div class="panel-heading" >
<i><b><h1 style="color: white; text-align: center;">\</h1></b></i>
    </div>
    <div class="panel-body">
<%= form_with( model: @product, local: true) do |f| %>

          <% if @product.errors.any? %>

   
     <div id="error_explanation">
       <h2>
         <%= pluralize(@product.errors.count, "error") %> prohibited
         this product from being saved:
      </h2>                                       
      <ul>
       <% @product.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
       <% end %>
    </ul>
 </div>
   

 <% end %>
 <table>
 <div class="field form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %><br>
    <%= f.text_field :price, id: :product_price, :class => 'form-control' %>
  </div>
 <div class="field">
    <%= f.label :name, :class => 'control-label col-lg-2' %><br>
    <%= f.text_field :name, id: :product_name, :class => 'form-control'  %>
  </div>
  <div class="field">
    <%= f.label :description, :class => 'control-label col-lg-2' %><br>
    <%= f.text_field :description, id: :product_description, :class => 'form-control'  %>
  </div>
 
   <div class="field">
    <%= f.fields_for :images do |image|  %>
      <%= render 'image_fields', f: image %>
    <% end %>
    <%= link_to_add_association 'Add Image', f, :images %>
  </div>      

  <div class="actions">
    <%= f.submit %>
  </div>

</table>

<% end %>
<br>
    <%= link_to 'Back', products_path, :class => 'btn btn-info '  %>


</div>
</div>