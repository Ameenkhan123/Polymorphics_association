 <div class="panel panel-info">
    <div class="panel-heading" >

    </div>
    <div class="panel-body">
    <div class="well">
     <%= form_for @portfolio, local: true do |f| %>

          <% if @portfolio.errors.any? %>

   
     <div id="error_explanation">
       <h2>
         <%= pluralize(@portfolio.errors.count, "error") %> prohibited
         this portfolio from being saved:
      </h2>                                       
      <ul>
       <% @portfolio.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
       <% end %>
    </ul>
 </div>
   

 <% end %>
 <table>

 <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :portfolio_name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, id: :portfolio_description %>
  </div>
  <div class="field">
    <%= f.fields_for :images do |image|  %>
      <%= render 'image_fields', f: image %>
    <% end %>
    <%= link_to_add_association 'Add Image', f, :images %>
  </div>      

  <div class="actions">
    <%= f.submit %>
  </div>
</table>

<% end %>

</div>
